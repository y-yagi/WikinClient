<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/pref_wikin_url"
        android:title="@string/pref_wikin_url_display"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:defaultValue="http://"
        android:hint="http://"
        android:maxLines="1" />
    <EditTextPreference
        android:key="@string/pref_wikin_auth_user_name"
        android:title="@string/pref_wikin_auth_user_name_display"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="@string/pref_wikin_auth_password"
        android:title="@string/pref_wikin_auth_password_display"
        android:selectAllOnFocus="true"
        android:capitalize="words"
        android:singleLine="true"
        android:password="true"
        android:maxLines="1" />
</PreferenceScreen>
